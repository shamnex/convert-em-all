    "devDependencies": {
        "babel-core": "^6.26.3",
        "babel-loader": "^7.1.4",
        "babel-preset-env": "^1.7.0",
        "concurrently": "^3.6.0",
        "copy-webpack-plugin": "^4.5.2",
        "css-loader": "^0.28.11",
        "file-loader": "^1.1.11",
        "gh-pages-deploy": "^0.5.0",
        "html-webpack-plugin": "^3.2.0",
        "idb": "^2.1.3",
        "live-server": "^1.2.0",
        "node-sass": "^4.7.2",
        "sass-loader": "^7.0.3",
        "style-loader": "^0.21.0",
        "webpack": "^4.12.1",
        "webpack-cli": "^3.0.8",
        "webpack-dev-server": "^3.1.4"
    },
    "dependencies": {
        "babel-polyfill": "^6.26.0"
    },
    "gh-pages-deploy": {
        "staticpath": "dist",
        "prep": [
        ],
        "commit": "Deploying...",
        "post": [
          "clean-source"
        ],
        "noprompt": false
